#!/bin/bash

sudo -s <<'EOF'

	wireTest=$(wg show 2>&1)

	if [[ ! -z "$wireTest" ]]; then
		cd /etc/wireguard
		downConf=$(echo "$wireTest" | grep -Eio "(interface.+)" | sed 's/interface:\s//')
		echo ">> You are connected to Mullvad VPN: $downConf"
		echo ">> Proceeding to disconnect."
		wg-quick down "$downConf"
		curl https://am.i.mullvad.net/connected
	else
		echo ">> It's cool, you are already disconnected from Mullvad VPN."
	fi
EOF
